<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".RecordExtraLessons"
    android:background="#A6D8DF"
    android:fillViewport="true"
    android:paddingBottom="25dp">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="18dp"
        android:layout_marginStart="18dp"
        app:cardElevation="14dp">
    <LinearLayout
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp">
        <TextView
            android:textColor="#555"
            android:textSize="25sp"
            android:fontFamily="cursive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Record Extra Lessons"
            android:gravity="center"
        />
        <EditText
            android:id="@+id/edit_start_date"
            android:layout_marginTop="20dp"
            android:layout_width="200dp"
            android:clickable="true"
            android:focusable="false"
            android:layout_height="40dp"
            android:hint="From Date"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:clickable="true"
                android:focusable="false"
                android:id="@+id/edit_end_date"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:hint="To Date"
                android:layout_marginEnd="20dp"/>
            <Button
                android:id="@+id/btn_search"
                android:text="search"
                android:layout_width="80dp"
                android:layout_height="40dp" />
        </LinearLayout>
        <LinearLayout

            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">
            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="3dp"
                app:cardElevation="12dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="Total Money"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/text_total_money"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="800$"
                        android:gravity="center"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                app:cardElevation="12dp"
                android:layout_marginBottom="3dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="Remain Money"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/text_remain_money"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="400$"
                        android:gravity="center"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
         <LinearLayout
             android:paddingTop="8dp"
             android:id="@+id/myRecords"
             android:layout_marginTop="15dp"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:paddingBottom="15dp">

         </LinearLayout>
    </LinearLayout>
    </android.support.v7.widget.CardView>



</ScrollView>