<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_marginTop="25dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:background="#f2f2f2"
        app:cardElevation="2dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#A6D8DF"
        android:padding="15dp"
        >
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txt_studentFullName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Manar OdEh"
                android:padding="15dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/txt_materiallist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Materials: DB, android,Java"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:paddingLeft="20dp"/>
            <TextView
                android:id="@+id/txt_grade"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingTop="15dp"
                android:paddingLeft="20dp"
                android:text="Grade: 8 "/>
            <TextView
                android:id="@+id/txt_status"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingTop="15dp"
                android:paddingLeft="20dp"
                android:text="status: Monthly"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="15dp">
                <Button
                    android:id="@+id/btn_del"
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:padding="2dp"
                    android:textSize="13dp"
                    android:text="delete"
                    android:background="#fddf"/>
                <Button
                    android:id="@+id/btn_block"
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:text="block"
                    android:background="#fddf"
                    android:textSize="13dp"
                    android:padding="2dp"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
