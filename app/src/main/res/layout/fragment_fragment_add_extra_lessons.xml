<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".FragmentAddExtraLessons"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="25dp"
    android:fillViewport="true"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="18dp"
        android:layout_marginStart="18dp"
        app:cardElevation="6dp"
        android:layout_marginBottom="25dp"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="25dp">
        <TextView
            android:layout_marginTop="15dp"
            android:textColor="#555"
            android:textSize="25sp"
            android:fontFamily="cursive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registier Extra Lessons"
            android:gravity="center"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/inputLayout_studentName"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="25dp">
            <AutoCompleteTextView
                android:id="@+id/auto_studentName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Student Name"
            />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/inputLayout_employeeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="25dp">
            <AutoCompleteTextView
                android:id="@+id/auto_employeeName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Employee Name"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/inputLayout_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="25dp">
            <EditText
                android:id="@+id/edit_date"
                android:clickable="true"
                android:focusable="false"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Date"/>
        </android.support.design.widget.TextInputLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputLayout_timeStart"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="25dp">
                <EditText
                    android:id="@+id/edit_time_start"
                    android:clickable="true"
                    android:focusable="false"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Time start"
                  />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputLayout_timeEnd"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="25dp">
                <EditText
                    android:clickable="true"
                    android:focusable="false"
                    android:id="@+id/edit_time_end"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Time start"
                 />
                </android.support.design.widget.TextInputLayout>
        </LinearLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/inputLayout_materials"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="25dp">
            <MultiAutoCompleteTextView
                android:id="@+id/multi_materials"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Materials"/>
        </android.support.design.widget.TextInputLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputLayout_money"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="25dp">
                <EditText
                    android:id="@+id/edit_money"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Money"
                    android:inputType="number"/>
            </android.support.design.widget.TextInputLayout>
            <RadioButton
                android:id="@+id/radio_paid"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="25dp"
                android:text="Done?"
                android:textSize="15sp"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_save"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:text="Save"
            android:background="@android:color/transparent"
            android:layout_marginBottom="25dp"
            />
        </LinearLayout>
</android.support.v7.widget.CardView>
</ScrollView>