<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        app:contentPadding="10dp"
        android:layout_width="match_parent"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_height="wrap_content"
        app:cardElevation="15dp"
        app:cardCornerRadius="5dp"
        android:layout_marginBottom="40dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/txt_delete"
                android:layout_width="15dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="3dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/cl"/>
            <TextView
                android:id="@+id/txt_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="1sp"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/txt_date"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="15/11/2018"
             />
            <TextView
                android:id="@+id/txt_time"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="From 12:30  To 1:30"
                android:gravity="center"
              />
            <TextView
                android:id="@+id/txt_material"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Materials:Java,PHP"
                android:gravity="center"
               />
            <TextView
                android:id="@+id/txt_employee"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Haneen"
                android:gravity="center"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/value_money"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:text="Maoney 500$"
                    android:gravity="right"
                    android:paddingEnd="8dp"
                    android:layout_weight="1.3"
                    />
                <RadioButton
                    android:id="@+id/radio_paid"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1.3"
                    android:text="Done?"/>
            </LinearLayout>
            <Button
                android:id="@+id/btn_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="save"
                android:background="#fddf"
                android:textSize="13dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:padding="2dp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
